{
  "manifest_version": 3,
  "name": "DeepWiki GitHub Extension",
  "version": "1.0.0",
  "description": "Adds a DeepWiki button to GitHub repository pages for quick navigation",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "DeepWiki GitHub Extension"
  }
} 